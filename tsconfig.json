{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    // "composite": true,
    // "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "types": [
      "node"
    ],
    "target": "es5",
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext"
    ],
    // "skipLibCheck": true,

    // "forceConsistentCasingInFileNames": true
    "isolatedModules": true
  }
}
